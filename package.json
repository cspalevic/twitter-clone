{
  "name": "twitter-clone",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "npx check-engine && turbo run dev --parallel",
    "tsc": "turbo run tsc",
    "lint": "turbo run lint",
    "lint:ts": "turbo run lint:ts",
    "lint:css": "turbo run lint:css",
    "format": "prettier --write \"**/*.{cjs,js,jsx,ts,tsx,md}\"",
    "prepare": "husky install"
  },
  "devDependencies": {
    "check-engine": "^1.10.1",
    "eslint-config-custom": "*",
    "husky": "^8.0.2",
    "lint-staged": "^13.1.0",
    "prettier": "latest",
    "tsx": "^3.12.1",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=14.0.0 <17.0.0",
    "yarn": ">=3.0.0"
  },
  "packageManager": "yarn@3.3.1",
  "prettier": "prettier-config-custom",
  "stylelint": {
    "extends": "stylelint-config-custom"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "custom"
    ],
    "settings": {
      "next": {
        "rootDir": [
          "apps/*/"
        ]
      }
    }
  },
  "dependencies": {
    "rooks": "^7.4.2"
  },
  "lint-staged": {
    "*": [
      "yarn format",
      "bash -c 'yarn tsc'",
      "bash -c 'yarn lint'"
    ]
  }
}
