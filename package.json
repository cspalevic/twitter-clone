{
  "name": "twitter-clone",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "format": "prettier --ignore-path .gitignore --write \"**/*.{cjs,js,jsx,ts,tsx,md}\"",
    "prepare": "husky install"
  },
  "devDependencies": {
    "eslint-config-custom": "*",
    "husky": "^8.0.2",
    "lint-staged": "^13.1.0",
    "prettier": "latest",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=14.0.0 <17"
  },
  "packageManager": "yarn@3.3.1",
  "prettier": "prettier-config-custom",
  "stylelint": {
    "extends": "stylelint-config-custom"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "custom"
    ],
    "settings": {
      "next": {
        "rootDir": [
          "apps/*/"
        ]
      }
    }
  },
  "lint-staged": {
    "apps/*": [
      "yarn format",
      "yarn lint"
    ],
    "packages/ui": [
      "yarn format",
      "yarn lint"
    ]
  }
}
